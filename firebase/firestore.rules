rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /casts/{castId} {
      allow read, write: if request.auth != null;
    }
    match /splashes/{splashId} {
      allow read, write: if request.auth != null;
    }
    match /echoes/{echoId} {
      allow read, write: if request.auth != null;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    match /casts/{castId}/media/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
